# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Email Configuration
EMAIL_PROVIDER=test
# Options: 'resend', 'sendgrid', 'test' (test mode logs emails without sending)
EMAIL_FROM=notifications@hopenet.example.com

# For Resend (https://resend.com)
RESEND_API_KEY=your_resend_api_key

# For SendGrid (https://sendgrid.com)
SENDGRID_API_KEY=your_sendgrid_api_key

# Edge Function Security
EDGE_FUNCTION_SECRET=your_secret_key_for_edge_function_auth

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_DASHBOARD_URL=http://localhost:3000/dashboard
